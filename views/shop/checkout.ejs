<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% products.forEach(p=>{ %>
    <div
      style="
        background-color: #f0f066;
        width: 7rem;
        padding: 20px;
        margin: 2rem;
        display: inline-block;
        border: 0.15rem solid grey;
        border-radius: 13px;
       box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
      "
    >
      <h1><%= p.productId.title %></h1>
      <h2><%= p.quantity %></h2>
    </div>
    <% }) %>
    <div>
        <hr/>
        <h2>Total : $<%=total%></h2>
    </div>
    <div>
        <button id="order-btn" type="button">order</button>
        <script src="https://js.stripe.com/v3/"></script>
    </div>
    <script>
        var stripe = Stripe('pk_test_51NH2E1SEkFMx5SYwq42oNQEVYfS1B5v7X5ekoGNBZN7OKZpzlM4rxsvIzTW9UbJKlQVNa0Hm3wcZxJualNEUJEt000PyBsiRRY');
        var orderBtn = document.getElementById('order-btn');
        orderBtn.addEventListener('click',function(){
           stripe.redirectToCheckout({
            sessionId : '<%=sessionId%>'
           });
        })
    </script>
  </main>
  
  <%- include('../includes/end.ejs') %>
</body>
