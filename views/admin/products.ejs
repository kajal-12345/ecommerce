<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <h1>my products</h1>

    <% if(prods.length > 0) { %>
    <h3>list of all products....</h3>
    <div class="card-container">
      <% for(let product of prods) { %>

      <div class="card">
        <div class="image-container">
            <h4><%= product.title %></h4> 
          <img src="/<%= product.imageurl%>" alt="<%= product.title%>" />
        </div>
        <div class="card-content">
          
          <h2><%= product.price %></h2>
          <p><%=product.description%></p>
        </div>
        <button class="cart-btn">
          <a href="/admin/edit-product/<%=product._id%>?edit=true">edit</a>
        </button>
        <!-- <form action="/admin/delete-product" method="post"> -->
          <input type="hidden" value="<%= product._id%>" name="productId" />
          <button class="cart-btn" type="button" onclick="deleteProduct(this)">delete</button>
        <!-- </form> -->
      </div>

      <% } %>
    </div>
    <%- include('../includes/pagination.ejs',{currentPage:currentPage,hasNext:hasNext,hasPrev:hasPrev,nextPage:nextPage,prevPage:prevPage,lastPage:lastPage}) %>
    <% } else { %>
    <h3>product not found</h3>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>
</body>
<script src="/js/admin.js"></script>